{
    "manifest_version": 3,
    "name": "Random Commander Extension",
    "description": "Uses Scryfall's API to find a new/random commander. If you need some inspiration for deck building, this is your tool.",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "action": {
        "default_icon": "./icons/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png",
        "512": "./icons/icon512.png"
    }
}