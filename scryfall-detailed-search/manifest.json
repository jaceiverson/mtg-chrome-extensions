{
    "manifest_version": 3,
    "name": "Scryfall Extension",
    "description": "Uses Scryfall's API to find a random cards",
    "version": "1.0",
    "permissions": [
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./icons/icon.png"
    },
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png",
        "512": "./icons/icon512.png"
    }
}